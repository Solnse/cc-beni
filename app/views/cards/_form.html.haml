= form_for @card do |f|
  -if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :card_name
    = f.text_field :card_name
  .field
    = f.label :card_type
    = f.text_field :card_type
  .actions
    = f.submit 'Save New Card'
